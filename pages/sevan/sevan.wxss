/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.map{
  transition: 0.1s ease;
 
}
.hideMap{
   display: none;
}
.add-btn-container{
  position: absolute;
  border-color: red;
  right: 5vw;
}
.active{
  color:#3F476F;
  font-weight: bold
}
.add-btn{
  background-color: white;
  border-color: red;
  /* opacity: 0.9; */
  width: 50px;
  height: 50px;
  color: #d3d3d3;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-content: center;
  justify-items: center;
  align-items: center;
}
.loc-btn{
  background-color: white;
  /* opacity: 0.9; */
  width: 50px;
  height: 50px;
  color: #d3d3d3;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-content: center;
  justify-items: center;
  align-items: center;
}
.loc-btn-container{
  position: absolute;
}
.add-img{
  width: 75%;
  position:absolute;
  top: 0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
  padding: 0 !important;
}

.handle{
