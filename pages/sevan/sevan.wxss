/* sevan button */
.share { 
  margin: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background-color: #3ACCE1;
  z-index: 10;
  width: 75px;
  height: 75px;
  border-radius: 15px;
  opacity: 1 !important;
} 
.clicked {
  background-color: #6736cf;
}
.share cover-image {
  height: 65%;
