}
.menuBar{
  height: 5vh;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.dropdown{
  width: 100%;
  background-color: white;
  position: absolute;
  z-index: 999;
   border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  transition: transform 1s linear;
}
