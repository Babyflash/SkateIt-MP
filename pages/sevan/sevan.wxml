<view style="position: relative;">
  <cover-view class="menuBar">
    <!-- first choice -->
      <cover-view class="choice" bindtap='firstChoice' style="">
        <cover-view class="{{first ? 'active' : ''}}">Type</cover-view>
        <cover-image style="{{first ? 'display: none' : '' }}" class="filter-arrow" class="img" src="../../lib/images/down.png" />
         <cover-image style="{{first ? '' : 'display: none'}}" class="filter-arrow" class="img" src="../../lib/images/up.png" />
      </cover-view> 
       <cover-view >
        |
      </cover-view> 
       <!-- second choice -->
      <cover-view class="choice" bindtap='secondChoice'>
        <cover-view class="{{second ? 'active' : ''}}">Distance</cover-view>
        <cover-image style="{{second ? 'display: none' : ''}}"class="filter-arrow" class="img" src="../../lib/images/down.png" />
        <cover-image style="{{second ? '' : 'display: none'}}" class="filter-arrow" class="img" src="../../lib/images/up.png" />
      </cover-view>
  </cover-view>
   <map 
      class="map"
      bindmarkertap="markertap"
      bindtap='closefilters'
      longitude="{{lg}}" 
      latitude="{{lt}}" 
      scale="{{sc}}" 
      style="width: 100%; height: {{clicked ? '40vh' : '85vh'}};" 
      markers="{{mk}}"
      show-location
      >
   
        <!-- first choice dropdown -->
  <cover-view class='dropdown' data="yooo" style="{{first ? '' : 'display: none'}}">
    <cover-view bindtap="selectItem" class="drop-item {{selecteditem ? 'active' : ''}}">
    Ledge
    </cover-view>
    <cover-view class="drop-item">
    Stairs
    </cover-view>
    <cover-view class="drop-item">
    Park
    </cover-view>
    <cover-view class="drop-item">
    Stairs
    </cover-view>
  </cover-view>
  <!-- second choice dropdown -->
  <cover-view class='dropdown' style="{{second ? '' : 'display: none'}}">
    <cover-view class="drop-item">
    1km
    </cover-view>
    <cover-view class="drop-item">
    2km
    </cover-view>
    <cover-view class="drop-item">
    3km
    </cover-view>
    <cover-view class="drop-item">
    4km
    </cover-view>
  </cover-view>
 
  </map>
  <cover-view class="add-btn-container" style="top: {{clicked ? '35vh' : '70vh'}};">
    <cover-view class="add-btn"  loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="navigateToAddSpotPage" over-class="other-button-hover">
      <cover-image style="width: 50%; height: 50%;  margin: 0 auto;" src="../../lib/images/camera2.png" />
    </cover-view>
  </cover-view>
  <cover-view class="loc-btn-container" style="top: {{clicked ? '35vh' : '80vh'}}; {{clicked ? 'left: 5vw' : 'right: 5vw'}};">
    <cover-view class="loc-btn" bindtap='_hanldeLocation' loading="{{loading}}" plain="{{plain}}"
		disabled="{{disabled}}" hover-class="other-button-hover">
    <cover-image style="width: 50%; height: 50%; margin: 0 auto;" src="../../lib/images/location2.png" /></cover-view>
  </cover-view>
    
  <accordian bindtap="test" show="{{show}}" bindlongpress="long" >
    <!-- <view slot="before" bindtap="accordion" class="handle"></view> -->
    <w-icon
      slot="arrow"
      bindtouchend="move"
      class="handle"
		 type="{{show ? 'arrow-down' : 'arrow-top'}}"
   />
  
    <!-- <logic slot="after" spotTypes='{{spotTypes}}'></logic> -->
    <spot-card-list slot="after" spotTypes='{{spotTypes}}'></spot-card-list>
  </accordian>
</view>
