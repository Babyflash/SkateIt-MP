<view style="position: relative;">
  <!-- this is where map should go -->
   <map 
      class="map" 
      bindmarkertap="markertap" 
      longitude="{{lg}}" 
      latitude="{{lt}}" 
      scale="{{sc}}" 
      style="width: 100%; height: {{clicked ? '50vh' : '85vh'}}; opacity: {{longpress ? '0.4' : '1'}};" 
      markers="{{mk}}"
      show-location
      >
    </map>
  <accordian bindtap="accordion" bindlongpress="long" bindtouchend="handleTouchEnd">
    <logic spotTypes='{{spotTypes}}'></logic>
  </accordian>
</view>
  
 
     
      
     

