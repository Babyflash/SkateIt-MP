/* pages/spot/spot.wxss */
.spot-img {
  position: relative;
  background-size: cover;
  background-position: center;
  width: 100%;
  height: 25vh;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  z-index: -1 !important;
  object-fit: cover;
}
.type{
  position: absolute;
  bottom: 0;
  left: 5%;
  font-size: 12pt;
  text-transform: uppercase;
}
.addressbox{
  width:90%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10px 15px;
  color: white;
  font-size: 10pt;
}
.address{
  text-align: center;
}
