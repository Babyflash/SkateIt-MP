.content{
  display: flex;
  flex-direction: column;
  width: 90vw;
  justify-content: center;
  align-items: center;
  padding: 10px;  
}

.btn > button{
  height: 32px;
  width: 42px;
  padding: 0 !important;
  margin: 0 !important;
  background-color: #3ACCE1 !important;

}
.location-icon{
  color: white;
}

.topspotbox{
  display: flex;
  width:100vw;
  height: 50px;
  position:relative;
  top:0;
  background-color: #2D324E;
}

.btnsbox{
  display: flex;
  justify-content: center;
  margin-top:5px;
  width:20%;
}

.share{
  color:white;
}

.spotpicscarousel{
  display: flex;
  justify-content: space-around;
  background-color: #2D324E;
}

.picplaceholder{
  background-color: rgb(31, 146, 146);
  background-image: url('https://image.shutterstock.com/z/stock-photo-beautiful-young-skater-woman-riding-on-her-longboard-in-the-city-607147790.jpg');
  background-size: contain;
  background-repeat: no-repeat;
  border-radius: 5px;
  height: 100px;
  width: 150px;
  margin: 5px;
  box-shadow: rgba(0,0,0,0.2) 3px 3px 2px;


}

.commentbox{
  background-color: white;
  width: 85vw;
  padding: 20px;
  border-radius: 5px;
  margin-top: 15px;
  margin-bottom: 10px;
}

.submit{
  background-color: #3ACCE1;
  margin-bottom: 10px;
  width: 25%;
  height: 35px;
  font-size: 12pt;
  color: white;
}

.submitarea{
  position: relative;
  right: 0px;
  width: 300px;
  
  }

.publishedcomment{
  display: flex;
  width:100vw;
  height:150px;
  margin-top: 10px;
  align-items: center;
}

.commentimage{
  position: relative;
  left: 5px;
  z-index: 1;
  padding: 0px;

}

.commenttextbox{
  border-radius: 5px;
  width: 85vw;
  height:150px;
  background-color: white;
  position:absolute;
  left:45px;

}

.commenttext{
  font-size: 10pt;
  width: 45vw;
  position: relative;
  left: 125px;
  word-wrap: break-word;
  height: 150px;
}

.commentsarea{
  height:100%;
}