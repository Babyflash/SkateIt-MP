/* pages/chinzoo/chinzoo.wxss */
#map {
  position: relative;
}

#addSpot {
  position: absolute;
  background-color: white;
  top: 80vh;
  right: 4px;
  border-radius: 50%;
}

.icon{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  background-color: #3ACCE1;
  width: 75px;
  height: 75px;
  border-radius: 15px;
  transition: 1s ease;
  
}

.icon-wrapper{
  display: grid;
  grid-template-columns: 50% 50%;
}

.grid-item{
  display: inline-flex;
  justify-content: center;
  padding: 12%;
}

.img{
  height: 65%;
  width: 65%;
  margin-top:10%;
}

.clicked_icon {
  background-color: #6736cf;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  width: 75px;
  height: 75px;
  border-radius: 15px;
  transition: 1s ease;
}

.demo-popup-6{
  padding:5%;
}

.slidecontainer {
  width: 100%;
}

.slider {
  width: 95%;
  height: 15px;
}




