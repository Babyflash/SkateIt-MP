/* pages/chinzoo/chinzoo.wxss */
#myMap {
  position: absolute;
  z-index: -1;
}

#addSpot {
  position: absolute;
  background-color: white;
  top: 80vh;
  right: 4px;
  border-radius: 50%;
}

.icon{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  background-color: #3ACCE1;
  width: 75px;
  height: 75px;
  border-radius: 15px;
  transition: 1s ease;
  
}

.icon-wrapper{
  display: grid;
  grid-template-columns: 50% 50%;
}
/* sevans popup */
.add-spot-pop{
  background-color: #292C40;
  opacity: 0.95;
  height: 100vh;
}
.pop-item{
  color: red;
  width: 100%;
}
.flex-wrp {display: flex; justify-content: space-around}
/* sevan button */
.share { 
  margin: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background-color: #3ACCE1;
  z-index: 10;
  width: 75px;
  height: 75px;
  border-radius: 15px;
  opacity: 1 !important;
} 
.clicked {
  background-color: #6736cf;
}
.share cover-image {
  height: 65%;
  width: 65%;
}
.share cover-view {
  color: #fff;  
}
.row{
  display: flex;
  justify-content: space-around;
}
.share button {
  opacity: 0.1;
  z-index: 99;
}
