<!--pages/chinzoo/chinzoo.wxml-->
<!--pages/home/home.wxml-->
<view class="page-body">
  <view class="page-section page-section-gap">
    <map 
      id="myMap" 
      bindmarkertap="markertap" 
      longitude="{{lg}}" 
      latitude="{{lt}}" 
      scale="{{sc}}" 
      style="width: 100%; height: 100vh;" 
      markers="{{mk}}"
      show-location
      >
    </map>
    <button id = "addSpot" bindtap="navigateToAddSpotPage" >+</button>
    <w-pane title="Loading" desc="加载指示器" />
    <w-loading id="wuss-loading" />
    <w-alert id="wuss-alert" />
   </view>
   <view class="btn-area">
      
      <button bindtap="chooseLocation" >Search location</button>
      <button bindtap="getCenterLocation" >Get location</button>
      <button bindtap="moveToLocation" >Move Place</button>
    </view>
</view>



