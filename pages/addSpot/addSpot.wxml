<view class="container bg" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url({{spotImg}}); object-fit: scale-down;">


      <view class="popup">

       <view class="section">
          <view class="section__title">Types</view>
          <view wx:for="{{types}}" wx:for-index="idx" wx:for-item="type">
          <view class="flex-wrp" style="flex-direction:row;">
            <view class="flex-item idx">
              <icon img="{{type}}">{{type}}</icon>
            </view>
          </view>
          </view>
        </view>
        
        <view>
          <slider class="slider" bindchange="setDifficulty" min="1" max="5" show-value selected-color="#464490" color="#3ACCE1" block-size='15' block-color='#474491' />
        </view>
        <button type="primary" bind:onClick="handleClose">Add Spot</button>
        <view>{{ items1Str }}</view>
      </view>

</view>