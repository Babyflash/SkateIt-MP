.icon{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  background-color: #3ACCE1;
  width: 75px;
  height: 75px;
  border-radius: 15px;
  transition: 1s ease;
  color: white;
  
}

.img{
  height: 65%;
  width: 65%;
  margin-top:10%;
}

.clicked_icon {
  background-color: #6736cf;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  width: 75px;
  height: 75px;
  border-radius: 15px;
  transition: 1s ease;
}
