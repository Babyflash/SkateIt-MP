/* components/accordian/accordian.wxss */
.title-bar{
  background: rgb(63, 71, 110);
  height: 15vh;
  position: sticky; 
  top: 0;
  z-index: 2;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0;
  transition: 0.5s ease;
}
