}
.card-container{
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}
.arrow{
  font-size: 30px;
  color: white;
}
.spot-count{
  color: white;
  font-size: 48px;
  text-align: center;
}

.info-title{
  color: white;
  font-weight: bolder;
}

.info-des{
  color: white;
}
.gradient-line {
  background: linear-gradient(90deg, rgba(103,54,207,1) 16%, rgba(9,9,121,1) 52%, rgba(0,212,255,1) 100%);
  height: 5px;
  width: 100vw;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 15rpx 15rpx 0 0;

}
